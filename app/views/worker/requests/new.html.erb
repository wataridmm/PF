<h1>Worker::Requests#new</h1>
<p>Find me in app/views/worker/requests/new.html.erb</p>

<div class="container p-5">
  <h1>申請画面</h1>
  <%= form_with model: @request, url:'/worker/requests', local:true do |f| %>
  <table class="table table-bordered">
			<tbody>
				<tr>
					<td><%= f.label :name, "備品名" %></td>
					<td><%= f.collection_select :item_id, Item.all, :id, :name %></td>
				</tr>
				<tr>
					<td><%= f.label :stock, "在庫数" %></td>
					<td><%= f.text_field :stock %></td>
				</tr>
			</tbody>
		</table>
		<div class="flex align-center pl5">
			<%= f.submit "作成", class: "btn btn-primary" %>
		</div>
	<% end %>
	<h2><%= link_to "在庫一覧", worker_requests_path %></h2>
</div>
