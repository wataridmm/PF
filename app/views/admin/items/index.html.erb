<div class="container p-5">
    <h2>備品一覧</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>備品ID</th>
                <th>備品名</th>
                <th>説明</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody>
            <tr>
                <td><%= item.id %></td>
                <td><%= item.name %></td>
                <td><%= item.comment %></td>
                <td>
                    <% if item.is_active == true %>
						<h5>
							<span class="badge badge-primary">
								使用可
							</span>
						</h5>
						<% else %>
						<h5>
							<span class="badge badge-secondary">
								使用不可
							</span>
						</h5>
					<% end %>
                </td>
                <td><%= link_to "詳細", admin_item_path(item.id) %></td>
            </tr>
        </tbody>
        <% end %>
    </table>
    <%= link_to "備品新規登録", new_admin_item_path, class: "btn btn-primary" %>
    <%= link_to "管理者トップ", admin_top_path, class: "btn btn-success" %>
</div>