<h1>編集画面</h1>
<%= form_with model:@item, url:"/admin/items/#{@item.id}", local:true do |f| %>
  <h4>備品名</h4>
  <%= f.text_field :name %>
  <h4>説明</h4>
  <%= f.text_field :comment %>
  <h4>ステータス</h4>
  <%= f.select :is_active, [['非稼働',0],['稼働',1]], { include_blank: true, selected: 0 } %>
  <%= f.submit '更新' %>
<% end %>
<%= link_to "戻る", admin_item_path(@item.id) %>