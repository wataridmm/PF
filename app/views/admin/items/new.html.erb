<div class="container p-5">
  <h1>備品登録画面</h1>
  <%= form_with model: @item, url:'/admin/items', local:true do |f| %>
    <h4>備品名</h4>
    <%= f.text_field :name %>
    <h4>説明</h4>
    <%= f.text_field :comment %>
    <h4>ステータス</h4>
    <%= f.select :is_active, [['非稼働',0],['稼働中',1]], { include_blank: true, selected: 0 } %>
    <%= f.submit '作成' %>
  <% end %>
</div>