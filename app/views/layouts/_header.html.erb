<% if admin_signed_in? %>
      <header class="admin_header">
        管理者としてログイン中
      </header>
    <% elsif worker_signed_in? %>
      <header>
        社員<%= current_worker.last_name %>としてログイン中
      </header>
    <% elsif customer_signed_in? %>
      <header>
        ユーザー<%= current_customer.name %>としてログイン中
      </header>
    <% else %>
      <header>
        閲覧ユーザー
      </header>
    <% end %>
    <%= link_to 'ログアウトリンク', destroy_worker_session_path, method: :delete %>




<% if admin_signed_in? %>
      <header class="admin_header">
        <div class="header-content">
          <%= link_to 'V2', admin_top_path, class: "logo" %>
          <ul class="flex">
            <li><%= link_to '在庫管理', admin_items_path %></li>
            <li><%= link_to '申請一覧', admin_customers_path %></li>
            <li><%= link_to 'イベント一覧', admin_orders_path %></li>
            <li><%= link_to '会場一覧', admin_genres_path %></li>
            <li><%= link_to '備品一覧', admin_genres_path %></li>
            <li><%= link_to '社員一覧', admin_genres_path %></li>
            <li><%= link_to '会員一覧', admin_genres_path %></li>
            <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
          </ul>
          <%= form_tag(admin_search_path, method: :get) do %>
            <%= text_field_tag "search[content]", "", :placeholder =>"会員: 姓,名,セイ,メイ / 商品: 商品名" %>
            <%= select_tag "search[model]", options_for_select({ "会員" => "customer", "商品" => "item" }) %>
            <%= select_tag "search[method]", options_for_select({ "部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect" }) %>
            <%= submit_tag '検索', class: "btn btn-primary" %>
          <% end %>
        </div>
      </header>
    <% elsif customer_signed_in? %>
      <header>
        <div class="header-content">
          <%= link_to 'NaganoCake', root_path, class: "logo" %>
          <ul class="flex">
            <p>ようこそ、<%= current_customer.full_name %>さん!</p>
            <li><%= link_to 'マイページ', mypage_path %></li>
            <li><%= link_to '商品一覧', items_path %></li>
            <li><%= link_to 'カート', cart_items_path %></li>
            <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %></li>
          </ul>
        </div>
      </header>
    <% else %>
      <header>
        <div class="header-content">
          <%= link_to 'NaganoCake', root_path, class: "logo" %>
          <ul class="flex">
            <li><%= link_to '商品一覧', items_path %></li>
            <li><%= link_to '新規登録', new_customer_registration_path %></li>
            <li><%= link_to 'ログイン', new_customer_session_path %></li>
          </ul>
        </div>
      </header>
    <% end %>