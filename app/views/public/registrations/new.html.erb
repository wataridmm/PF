<div class="container-fluid py-4 mw-md">
    <div class="row justify-content-center">
        <div class="col-md-8">
          <h1></h1>
            <div class="card">
                <div class="card-header">新規会員登録</div>
                <div class="card-body">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "public/shared/error_messages", resource: resource %>
                        <div class="form-group row">
                            <label for="name" class="col-md-4 col-form-label text-md-right">ニックネーム</label>
                            <div class="col-md-6">
                                <%= f.text_field :name, autofocus: true, placeholder: "V2太郎" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="email_address" class="col-md-4 col-form-label text-md-right">メールアドレス</label>
                            <div class="col-md-6">
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password" class="col-md-4 col-form-label text-md-right">パスワード</label>
                            <div class="col-md-6">
                                <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %>文字以上)</em>
                                <% end %><br />
                                <%= f.password_field :password, autocomplete: "new-password" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password_confirmation" class="col-md-4 col-form-label text-md-right">パスワード確認</label>
                            <div class="col-md-6">
                                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 offset-md-4">
                                <div class="checkbox">
                                    <label>
                                        <% if devise_mapping.rememberable? %>
                                          <div class="field">
                                            <%= f.check_box :remember_me %>
                                            <%= f.label :remember_me %>
                                          </div>
                                        <% end %>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 offset-md-3">
                          <%= f.submit "登録する", class: "sign-btn" %>
                        </div>
                    <% end %>
                    <div class="text-right p-3">
                    すでに会員の方は<%= link_to "コチラ", new_customer_session_path, class: "btn btn-primary" %>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

